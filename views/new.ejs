<% include partials/header %>

<div class="container">

    <div class="row">
        <h1 style="text-align: center;">Create a new campground</h1>
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" id="name" placeholder="Enter campground name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" id="image" placeholder="Enter image URL">
                </div>
                <div class="form-group">
                    <button class="btn btn-lge btn-primary btn-block" type="submit">Create campground!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to campgrounds list</a>
        </div>
    </div>
</div>

<% include partials/footer %>